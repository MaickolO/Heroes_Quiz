<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="276dp"
    android:layout_marginHorizontal="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:cardBackgroundColor="#272275">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="ComodÃ­n"
                    android:textColor="@android:color/white"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#6877BF"/>

                <TextView
                    android:id="@+id/txtCuerpo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="90dp"
        android:layout_marginTop="80dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/frmOk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:fabCustomSize="70dp"
            android:src="@drawable/cheque"
            app:tint="@null"
            app:backgroundTint="@color/fab2"
            android:contentDescription="btnNo"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="80dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/frmNo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/close"
            app:fabCustomSize="70dp"
            app:tint="@null"
            app:backgroundTint="@color/fab1"
            android:contentDescription="btnOK" />

    </FrameLayout>

</FrameLayout>

